block append config
	mixin otherNews(imgName, txtLink)
		div
			figure
				img(src=pathImg[0]+imgName, alt="")
			article
				a(href="#").
					#{txtLink}

	mixin ekonoGraphic(imgName, txtLink)
		div
			a(href="#")
				figure
					img(src=pathImg[1]+imgName, alt="" class="img-responsive")
			article
				a(href="#").
					#{txtLink}
					
	mixin breadcrumb(nameUrls)
		- var itung = nameUrls.length
		ol.breadcrumb
			each nameUrl, idx in nameUrls
					if idx !== itung - 1
						li
							a(href="index.html") #{nameUrl}
					else
						li.active #{nameUrl}
	

	mixin topikPil(nameTopik)
		- var itung = nameTopik.length
		each topik, idx in nameTopik
			if idx !== itung - 1
				a(href="#") #{topik}, 
			else
				a(href="#") #{topik}
	
	mixin formSearch(namePages)
		section.formSearch
			form
				.row
					.col-md-4.col-sm-6
						.form-group
							input(type="text" class="form-control" placeholder="Kata kunci")
					.col-md-2.col-sm-6
						.form-group
							select(class="form-control")
								option(selected="selected") Pilih Topik..
								option Topik Satu
								option Topik Dua
								option Topik Tiga
					.col-md-2.col-sm-6
						.form-group
							select(class="form-control")
								option(selected="selected") Pilih Subtopik..
								option Topik Satu
								option Topik Dua
								option Topik Tiga
					.col-md-2.col-sm-6
						.form-group
							select(class="form-control")
								option(selected="selected") Sort By Date
								option Sort By Name A-Z
								option Sort By Name Z-A
					.col-md-2.col-sm-12
						input(type="submit" class="btn btn-block btn-orange" value="Cari "+namePages)
